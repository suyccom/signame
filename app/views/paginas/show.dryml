<show-page>
  <content-body:>
    <% if @pagina.video_file_name %>
      <video-player/>
    <% else %>
      <no-video/>
    <% end %>
  </content-body:>
</show-page>

<def tag="video-player">
  <video width="320" height="240" controls>
    <source src="#{this.video.url(:original)}" type="video/webm"/>
    Your browser does not support the video tag.
  </video> 
</def>

<def tag="no-video">
  <div class="form-horizontal">
    <field-list fields="url, email-solicitante"/>
  </div>
</def>


